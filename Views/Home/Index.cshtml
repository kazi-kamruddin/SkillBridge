@{
    ViewBag.Title = "SkillBridge";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section class="hero text-center text-white d-flex flex-column justify-content-center align-items-center"
         style="background: linear-gradient(to right, #007bff, #6610f2); height: 80vh;">
    <h1 class="display-3 fw-bold">Learn. Teach. Grow — Together.</h1>
    <p class="lead mt-3">Join SkillBridge and exchange skills with learners and teachers around the world.</p>
    <div class="mt-4">
        <a href="/Skills/Browse" class="btn btn-light btn-lg me-3">Start Learning</a>
        <a href="/Skills/Teach" class="btn btn-outline-light btn-lg">Become a Teacher</a>
    </div>
</section>

<!-- How It Works Section -->
<section class="container my-5">
    <h2 class="text-center mb-5 fw-bold">How SkillBridge Works</h2>
    <div class="row text-center">
        <div class="col-md-4">
            <div class="card shadow border-0 p-4">
                <div class="fs-1">🔍</div>
                <h4 class="mt-3">Choose Skills</h4>
                <p>Pick what you want to learn and what you can teach from our predefined list.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow border-0 p-4">
                <div class="fs-1">🤝</div>
                <h4 class="mt-3">Connect & Exchange</h4>
                <p>Find learners and teachers who match your interests and start swapping skills.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow border-0 p-4">
                <div class="fs-1">🚀</div>
                <h4 class="mt-3">Grow Together</h4>
                <p>Track your learning journey and help others grow by teaching what you know.</p>
            </div>
        </div>
    </div>
</section>

<!-- Skills Showcase -->
<section class="bg-light py-5">
    <div class="container">
        <h2 class="text-center fw-bold mb-4">Explore Popular Skills</h2>
        <div class="d-flex justify-content-center mb-3">
            <input type="text" class="form-control w-50 me-2" placeholder="Search skills...">
            <button class="btn btn-primary">Search</button>
        </div>
        <div class="d-flex flex-wrap justify-content-center gap-3 mt-4">
            <span class="badge bg-primary p-3">Web Development</span>
            <span class="badge bg-success p-3">Graphic Design</span>
            <span class="badge bg-warning p-3">Photography</span>
            <span class="badge bg-info p-3">Cooking</span>
            <span class="badge bg-danger p-3">Public Speaking</span>
            <span class="badge bg-secondary p-3">Digital Marketing</span>
            <span class="badge bg-dark p-3">Data Science</span>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section class="container my-5">
    <h2 class="text-center fw-bold mb-5">What Our Users Say</h2>
    <div class="row text-center">
        <div class="col-md-6 mb-4">
            <div class="card shadow border-0 p-4">
                <p class="fst-italic">"I learned Python in just 3 months thanks to SkillBridge’s amazing teachers!"</p>
                <h6 class="fw-bold mt-3">— Sara</h6>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card shadow border-0 p-4">
                <p class="fst-italic">"I taught Photoshop and learned Photography. It’s a win-win!"</p>
                <h6 class="fw-bold mt-3">— Akash</h6>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="text-center py-5 text-white" style="background-color: #007bff;">
    <h2 class="fw-bold">Ready to Swap Skills?</h2>
    <p class="lead">Join thousands of learners and teachers today!</p>
    <a href="/Account/Register" class="btn btn-light btn-lg mt-3">Join Now</a>
</section>
