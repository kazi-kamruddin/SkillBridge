@{
    ViewBag.Title = "Communities";

    var skillsKnown = new List<dynamic>
{
        new { Id = 1, Name = "C++", Url = Url.Action("Skill", "Communities", new { id = "CPP" }) },
        new { Id = 2, Name = "Chess", Url = Url.Action("Skill", "Communities", new { id = "Chess" }) },
        new { Id = 3, Name = "Java", Url = Url.Action("Skill", "Communities", new { id = "Java" }) }
    };

    var skillsToLearn = new List<dynamic>
{
        new { Id = 4, Name = "Go", Url = Url.Action("Skill", "Communities", new { id = "Go" }) },
        new { Id = 5, Name = "Rust", Url = Url.Action("Skill", "Communities", new { id = "Rust" }) },
        new { Id = 6, Name = "TypeScript", Url = Url.Action("Skill", "Communities", new { id = "TypeScript" }) }
    };
}

<div class="container mt-5 pt-4">
    <h3 class="match-heading">Communities of your skills</h3>
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        @foreach (var skill in skillsKnown)
        {
            <div class="col">
                <a href="@skill.Url" class="card-link">
                    <div class="card text-center skill-card shadow-sm h-100 hover-card">
                        <div class="card-body d-flex align-items-center justify-content-center">
                            <h5 class="mb-0">@skill.Name</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

    <h3 class="match-heading">Communities of skills you seek to learn</h3>
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        @foreach (var skill in skillsToLearn)
        {
            <div class="col">
                <a href="@skill.Url" class="card-link">
                    <div class="card text-center skill-card shadow-sm h-100 hover-card">
                        <div class="card-body d-flex align-items-center justify-content-center">
                            <h5 class="mb-0">@skill.Name</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

