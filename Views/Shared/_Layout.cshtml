<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SkillSwap</title>

    <!-- Default ASP.NET CSS Bundles -->
    @Styles.Render("~/Content/css")

    <!-- Custom SkillSwap Theme -->
    <link href="~/Content/skillswap.css" rel="stylesheet" />

    <!-- Scripts -->
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container">
            <!-- Brand Logo -->
            @Html.ActionLink("SkillSwap", "Index", "Home", null, new { @class = "navbar-brand fw-bold fs-4" })

            <!-- Mobile Toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Items -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item mx-2">
                        @Html.ActionLink("Explore", "Index", "Explore", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item mx-2">
                        @Html.ActionLink("Communities", "Index", "Communities", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item mx-2">
                        @Html.ActionLink("Messages", "Index", "Messages", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item mx-2">
                        @Html.ActionLink("Profile", "Index", "Profile", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item mx-2">
                        @Html.ActionLink("Interaction", "Overview", "Interaction", null, new { @class = "nav-link" })
                    </li>



                    <li class="nav-item mx-2">
                        @Html.ActionLink("Login", "Login", "Auth", null, new { @class = "btn btn-outline-light px-3" })
                    </li>
                    <li class="nav-item mx-2">
                        @Html.ActionLink("Sign Up", "SignUp", "Auth", null, new { @class = "btn btn-primary px-3" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Body -->
    <div class="container body-content mt-4">
        @RenderBody()
        <hr />
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light text-center py-3 mt-5">
        <div class="container">
            <p class="mb-1">&copy; @DateTime.Now.Year SkillSwap. All Rights Reserved.</p>
            <div>
                <a href="#" class="text-light mx-2"><i class="bi bi-facebook"></i></a>
                <a href="#" class="text-light mx-2"><i class="bi bi-twitter"></i></a>
                <a href="#" class="text-light mx-2"><i class="bi bi-instagram"></i></a>
                <a href="#" class="text-light mx-2"><i class="bi bi-linkedin"></i></a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
